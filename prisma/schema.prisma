generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Cliente {
    id_cliente Int @id @default(autoincrement()) //âŒ

    nombre   String // âœ…
    email    String? @unique // âœ…
    telefono String? // âœ…

    estado_auditoria    String    @default("1") @db.Char(1) //âŒ
    fecha_creacion      DateTime  @default(now()) //âŒ
    fecha_actualizacion DateTime? //âŒ

    ventas Venta[]

    @@map("cliente")
}

model proveedor {
    id_proveedor Int @id @default(autoincrement()) //âŒ

    nombre   String // âœ…
    contacto String? @db.VarChar(50) // âœ…
    telefono String? @unique // âœ…
    email    String  @unique // âœ…

    estado_auditoria    String?   @default("1") @db.Char(1) //âŒ
    fecha_creacion      DateTime? @default(now()) //âŒ
    fecha_actualizacion DateTime? //âŒ

    productos Producto[] // relaciÃ³n 1:N

    @@map("proveedor")
}

model Producto {
    id_producto Int @id @default(autoincrement()) //âŒ

    nombre       String // âœ…
    descripcion  String? // âœ…
    precio       Decimal @db.Decimal(10, 2) // âœ…
    id_proveedor Int? // âœ… // COLUMN, CAMPO, FK

    estado_auditoria    String?   @default("1") @db.Char(1) //âŒ
    fecha_creacion      DateTime? @default(now()) //âŒ
    fecha_actualizacion DateTime? //âŒ

    proveedor      proveedor?     @relation(fields: [id_proveedor], references: [id_proveedor], onUpdate: Cascade, onDelete: SetNull)
    inventario     Inventario?
    detalle_ventas DetalleVenta[]

    @@map("producto")
}

model Inventario {
    id_producto          Int      @id // âœ… FK
    stock                Int // âœ…
    ultima_actualizacion DateTime @default(now()) // ğŸŸ¡

    estado_auditoria    String?   @default("1") @db.Char(1) //âŒ
    fecha_creacion      DateTime? @default(now()) //âŒ
    fecha_actualizacion DateTime? //âŒ

    producto Producto @relation(fields: [id_producto], references: [id_producto], onUpdate: Cascade, onDelete: Cascade)

    @@map("inventario")
}

model Venta {
    id_venta Int @id @default(autoincrement()) //âŒ

    id_cliente Int? // âœ… FK

    fecha_venta DateTime @default(now()) // ğŸŸ¡
    total       Decimal? @db.Decimal(10, 2) // âœ…

    estado_auditoria    String?   @default("1") @db.Char(1) //âŒ
    fecha_creacion      DateTime? @default(now()) //âŒ 
    fecha_actualizacion DateTime? //âŒ

    cliente        Cliente?       @relation(fields: [id_cliente], references: [id_cliente], onUpdate: Cascade, onDelete: SetNull)
    detalle_ventas DetalleVenta[]

    @@map("venta")
}

model DetalleVenta {
    id_detalle Int @id @default(autoincrement()) //âŒ

    id_venta    Int // âœ…
    id_producto Int // âœ…

    cantidad Int // âœ…
    subtotal Decimal @db.Decimal(10, 2) // âœ…

    estado_auditoria    String?   @default("1") @db.Char(1) //âŒ
    fecha_creacion      DateTime? @default(now()) //âŒ
    fecha_actualizacion DateTime? //âŒ

    venta    Venta    @relation(fields: [id_venta], references: [id_venta], onUpdate: Cascade, onDelete: Cascade)
    producto Producto @relation(fields: [id_producto], references: [id_producto], onUpdate: Cascade, onDelete: Cascade)

    @@map("detalle_venta")
}
